// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Artists {
  id   String @id @default(uuid())
  pubId String @default(cuid())
  name String 
  nameArt String
  email String @unique
  pass String
  whatsApp Float
  cpf Float @unique
  ArtistsEvents Events[]
  createdAt DateTime @default(now())
  artistsMeta ArtistsMeta?
}

model ArtistsMeta {
  id   String @id @unique
  artists Artists @relation(fields: [id], references: [id])
  profileViews Int @default(0)
  updatedAt DateTime @default(now())
  profileImage String? 
}

model Events {
  id   String @id @default(uuid())
  eventName String
  hour DateTime?
  createdAt DateTime @default(now())
  artistCreator String
  artist Artists @relation(fields: [artistCreator], references: [id])
  eventSpace String
  establishment Establishments @relation(fields: [eventSpace], references: [id])
  eventStatus String
}

model Establishments {
  id   String @id @default(uuid())
  pubId String @default(cuid())
  email String @unique
  pass String
  nomeResponsavel String
  cnpj String @unique
  whatsApp String
  name String
  cep String
  numEnd String
  logradouro String
  bairro String
  cidade String
  tema String?
  horaFunc String?
  EstablishmentEvents Events[]
  createdAt DateTime @default(now())
  establishments EstablishmentsMeta?
}
model EstablishmentsMeta {
  id   String @id @unique
  establishments Establishments @relation(fields: [id], references: [id])
  profileViews Int @default(0)
  updatedAt DateTime @default(now())
}