// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Artists {
  id   String @id @default(uuid())
  pubId String @default(cuid())
  name String 
  nameArt String
  email String @unique
  pass String
  whatsApp Float
  cpf Float @unique
  createdAt DateTime @default(now())
  artistsMeta ArtistsMeta?
}

model ArtistsMeta {
  id   String @id @unique
  artists Artists @relation(fields: [id], references: [id])
  profileViews Int @default(0)
  updatedAt DateTime @default(now())
  profileImage String? 
}
model Establishments {
  id   String @id @default(uuid())
  pubId String @default(cuid())
  email String @unique
  pass String
  nomeResponsavel String
  cnpj String @unique
  whatsApp String
  name String
  cep String
  numEnd String
  logradouro String
  bairro String
  cidade String
  tema String?
  horaFunc String?
  createdAt DateTime @default(now())
  establishments EstablishmentsMeta?
}
model EstablishmentsMeta {
  id   String @id @unique
  establishments Establishments @relation(fields: [id], references: [id])
  profileViews Int @default(0)
  updatedAt DateTime @default(now())
}

model Post {
  id   String @id @default(cuid())
  author String
  author_type String
  title String
  format String
  createdAt DateTime @default(now())
  postmeta Postmeta?
}
model Postmeta {
  id   String @id @unique
  post_id Post @relation(fields: [id], references: [id])
  meta_key String 
  meta_value String 
}